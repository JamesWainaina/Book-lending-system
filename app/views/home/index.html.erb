<h1>Welcome</h1>

<div class="mx-aut max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <h1 class="text-3xl font-bold text-center mb-8">Books Collection</h1>
    <!-- Horizontal Scroll Container -->
    <div class="overflow-x-auto">
      <!-- Flex Container for Books -->
      <div class="flex gap-6" style="min-width: max-content;">
        <% @books.each do |book| %>
          <!-- Individual Book Card -->
          <div class="bg-white shadow-md rounded-lg overflow-hidden" style="flex: 0 0 calc(25% - 1.5rem);">
            <% if book.image.attached? %>
              <img class="w-full h-64 object-cover" src="<%= url_for(book.image) %>" alt="<%= book.title %>">
            <% else %>
              <img class="w-full h-64 object-cover" src="/path_to_default_image.jpg" alt="Default Book Cover">
            <% end %>
            <div class="p-4">
              <h2 class="text-lg font-bold mb-2"><%= book.title %></h2>
              <p class="text-gray-700 mb-1">Author: <%= book.author %></p>
              <p class="text-gray-700 mb-3">ISBN: <%= book.isbn %></p>
              <!-- Link to the book's show page -->
              <%= link_to 'View Details', book_path(book), class: 'px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>