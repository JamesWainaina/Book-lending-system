<h1 class="text-3xl font-bold mb-6">Book Collection</h1>
<br/>
<div class="flex justify-between mb-6">
  <div></div>
  <!-- Button to add a new book -->
  <%= link_to 'Add New Book', new_book_path, class: 'btn btn-secondary' %>
</div>


<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @books.each do |book| %>
    <div class="bg-white rounded-lg shadow-md p-4">
      <% if book.image.attached? %>
        <img src="<%= url_for(book.image) %>" alt="<%= book.title %>" class="h-48 w-full object-cover rounded-md mb-4">
      <% else %>
        <img src="https://via.placeholder.com/150" alt="Default Image" class="h-48 w-full object-cover rounded-md mb-4">
      <% end %>

      <h2 class="text-xl font-semibold"><%= book.title %></h2>
      <p class="text-gray-700">Author: <%= book.author %></p>
      <p class="text-gray-500">ISBN: <%= book.isbn %></p>

      <div class="mt-4">
        <%= link_to 'View Details', book_path(book), class: 'inline-block bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600' %>
      </div>
    </div>
  <% end %>
</div>