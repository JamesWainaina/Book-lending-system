<div class="max-w-md mx-auto mt-15 p-6 bg-white rounded-lg shadow-md border-2 border-blue-500 relative flex justify-center items-center">
  <%= form_with model: @book, local: true, html: { enctype: "multipart/form-data" } do |form| %>
    
    <!-- Title -->
    <div class="mb-5">
      <%= form.label :title, class: 'block mb-2 text-sm font-medium text-gray-900' %>
      <%= form.text_field :title, class: 'shadow-xs bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', required: true %>
    </div>
    
    <!-- Author -->
    <div class="mb-5">
      <%= form.label :author, class: 'block mb-2 text-sm font-medium text-gray-900' %>
      <%= form.text_field :author, class: 'shadow-xs bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', required: true %>
    </div>
    
    <!-- ISBN -->
    <div class="mb-5">
      <%= form.label :isbn, class: 'block mb-2 text-sm font-medium text-gray-900' %>
      <%= form.text_field :isbn, class: 'shadow-xs bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', required: true %>
    </div>
    
    <!-- Image Upload -->
    <div class="mb-5 align-center">
      <%= form.label :image, 'Upload Book Image', class: 'block mb-2 text-sm font-medium text-gray-900' %>
      <%= form.file_field :image, class: 'shadow-xs bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', accept: 'image/*', required: true %>
    </div>
    
    <!-- Submit Button -->
    <div class="text-center mt-6">
      <%= form.submit 'Add New Book', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md' %>
    </div>

  <% end %>
</div>