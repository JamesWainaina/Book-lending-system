<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
  <h2 class="text-center text-3xl font-bold text-gray-700">Sign Up</h2>
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-r ml-4">
    <div class="w-full max-w-xs">
      <!-- Name Field -->
      <div class="mb-4">
        <%= f.label :name, "Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :name, placeholder: "John Doe", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
      </div>
      
      <!-- Email Field -->
      <div class="mb-4">
        <%= f.label :email, "Email", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :email, placeholder: "john@gmail.com", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
      </div>

      <!-- Password Field -->
      <div class="mb-4">
        <%= f.label :password, "Password", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, placeholder: "******************", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
        <p class="text-red-500 text-xs italic">Please choose a strong password.</p>
      </div>

      <!-- Repeat Password Field -->
      <div class="mb-4">
        <%= f.label :password_confirmation, "Repeat Password", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, placeholder: "******************", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
      </div>

      <!-- Profile Picture Field -->
      <div class="mb-4">
        <%= f.label :profile_picture, "Profile Picture", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.file_field :profile_picture, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Submit Button -->
      <div class="flex items-center justify-between mt-5">
        <%= f.submit "Register", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Already have an account? Login link -->
      <div class="mt-4 text-center">
        <p class="text-gray-600 text-sm">Already have an account? <%= link_to "Login", new_session_path(resource_name), class: "text-blue-500 hover:underline" %></p>
      </div>
    </div>
  </div>
<% end %>
